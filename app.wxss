/**app.wxss**/

.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  height: 100%;
  font-size: 14rpx;
  color: #000;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
   font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
}
.flex{
  display: flex;
}
.flex-wrap{
  flex-wrap: wrap;
}
.flex-col{
  flex-direction: column;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
/*head   search*/
.container .search{
  width:100%;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 0;
  background: #CC0202;
}
.container .search-left{
  flex: 15;
  background: #CC0202;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  background:#FFF;
  font-size: 26rpx;
  text-indent: 12rpx;
}
.search-placeholder{
  color: #515151;
  line-height: 26rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 2;
  margin-left:20rpx;
}
.container .search .search-right image{
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
/*ad*/
.ad ,.graphic-grp-item{
  width:700rpx;
  margin:20rpx 0;
  flex-wrap:wrap;
  justify-content:space-between;
}
.ad navigator:first-child image{
  width:700rpx;
  height: 120rpx;
}
.ad image,.graphic-grp-item image{
  margin-top: 10rpx;
  width:335rpx;
  height: 150rpx;
}
